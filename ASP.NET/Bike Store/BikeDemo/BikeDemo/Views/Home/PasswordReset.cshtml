@{
    ViewBag.Title = "PasswordReset";
}

<h2>PasswordReset</h2>

<p>@TempData["error"]</p>
<p>@TempData["Message"]</p>

@using (Html.BeginForm())
{
    <table>
        <tr>
            <td>
                <label>Enter a new password: </label>
            </td>
            <td>
                <input type="password" name="pass" />
            </td>
        </tr>
    </table>
    <input type="submit" value="Reset Passowrd" />
}