<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_title"
        android:id="@+id/main_titleView" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/main_editTitle"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/main_titleView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_spinner"
        android:id="@+id/main_quoteText"
        android:layout_below="@+id/main_editTitle"
        android:layout_alignParentStart="true" />
    <Spinner
        android:id="@+id/notes_spinner"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/main_quoteText"
        android:layout_toEndOf="@+id/main_quoteText" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="36dp"
        android:layout_height="35dp"
        android:text="@string/dotdotdot"
        android:id="@+id/main_new_CatButton"
        android:layout_alignTop="@+id/notes_spinner"
        android:layout_toEndOf="@+id/notes_spinner" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/main_editText"
        android:layout_below="@+id/main_new_CatButton"
        android:gravity="top" />




</RelativeLayout>
